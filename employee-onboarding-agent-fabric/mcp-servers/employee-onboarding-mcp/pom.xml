<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>com.mulesoft.mcp</groupId>
		<artifactId>employee-onboarding-mcp-parent</artifactId>
		<version>1.0.0</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<artifactId>employee-onboarding-mcp</artifactId>
	<version>1.0.2</version>
	<packaging>mule-application</packaging>

	<name>Employee Onboarding MCP Server</name>
	<description>MCP Server for Employee Database Operations</description>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.mule.tools.maven</groupId>
				<artifactId>mule-maven-plugin</artifactId>
				<version>${mule.maven.plugin.version}</version>
				<extensions>true</extensions>
				<configuration>
					<!-- CloudHub 1.0 deployment configuration -->
					<cloudHubDeployment>
						<uri>https://anypoint.mulesoft.com</uri>
						<server>CloudHub</server>
						<applicationName>employee-onboarding-mcp-server</applicationName>
						<muleVersion>${cloudhub1.runtime.version}</muleVersion>
						<environment>Sandbox</environment>
						<region>us-east-1</region>
						<businessGroup>COE</businessGroup>
						<workers>1</workers>
						<workerType>MICRO</workerType>
					</cloudHubDeployment>
					
					<!-- CloudHub 2.0 deployment configuration -->
					<cloudHub2Deployment>
						<uri>https://anypoint.mulesoft.com</uri>
						<server>CloudHub</server>
						<applicationName>employee-onboarding-mcp-server</applicationName>
						<muleVersion>
							<version>${cloudhub2.runtime.version}</version>
						</muleVersion>
						<environment>Sandbox</environment>
						<region>us-east-1</region>
						<businessGroup>COE</businessGroup>
						<deploymentSettings>
							<vCoreCount>0.1</vCoreCount>
							<continuousDeployment>true</continuousDeployment>
						</deploymentSettings>
					</cloudHub2Deployment>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.mule.connectors</groupId>
			<artifactId>mule-http-connector</artifactId>
			<version>${mule.http.connector.version}</version>
			<classifier>mule-plugin</classifier>
		</dependency>
		<dependency>
			<groupId>org.mule.connectors</groupId>
			<artifactId>mule-db-connector</artifactId>
			<version>${mule.db.connector.version}</version>
			<classifier>mule-plugin</classifier>
		</dependency>
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>${postgresql.version}</version>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>${h2.version}</version>
		</dependency>
		<dependency>
			<groupId>org.mule.modules</groupId>
			<artifactId>mule-apikit-module</artifactId>
			<version>${mule.apikit.version}</version>
			<classifier>mule-plugin</classifier>
		</dependency>
	</dependencies>

</project>
