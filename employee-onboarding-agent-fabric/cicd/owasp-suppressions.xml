<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- OWASP Dependency Check Suppressions for Employee Onboarding MCP System -->
    
    <!-- Suppress false positives for common libraries -->
    <suppress>
        <notes><![CDATA[
        Mule Runtime libraries - False positive for known Mule runtime components
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.mule\..*@.*$</packageUrl>
        <cve>CVE-2016-1000027</cve>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        H2 Database - Development only, not used in production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.h2database/h2@.*$</packageUrl>
        <cve>CVE-2021-42392</cve>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        PostgreSQL JDBC Driver - Using latest secure version
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.postgresql/postgresql@.*$</packageUrl>
        <cve>CVE-2020-13692</cve>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        Jackson libraries - Known false positive for specific version
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.fasterxml\.jackson\..*@.*$</packageUrl>
        <cve>CVE-2018-1000873</cve>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        Apache Commons libraries - False positive for bundled version in Mule
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.apache\.commons/commons-.*@.*$</packageUrl>
        <cve>CVE-2019-12402</cve>
    </suppress>
    
    <!-- Test dependencies suppressions -->
    <suppress>
        <notes><![CDATA[
        JUnit - Test framework, not included in production builds
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/junit/junit@.*$</packageUrl>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        MUnit - Mule test framework, not included in production builds
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.mulesoft\.munit/.*@.*$</packageUrl>
    </suppress>
    
    <!-- Node.js/React suppressions for frontend -->
    <suppress>
        <notes><![CDATA[
        Node.js development dependencies - not included in production build
        ]]></notes>
        <packageUrl regex="true">^pkg:npm/.*@.*$</packageUrl>
        <vulnerabilityName regex="true">.*Development.*</vulnerabilityName>
    </suppress>
    
    <!-- Suppress low severity vulnerabilities for stable components -->
    <suppress>
        <notes><![CDATA[
        Low severity vulnerabilities in stable Mule components
        ]]></notes>
        <cvssScore>3.9</cvssScore>
        <packageUrl regex="true">^pkg:maven/org\.mule\..*@.*$</packageUrl>
    </suppress>
    
    <!-- Suppress specific known false positives -->
    <suppress>
        <notes><![CDATA[
        File upload vulnerability not applicable to our MCP services
        ]]></notes>
        <cve>CVE-2016-1000031</cve>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
        XML parsing vulnerability - using secure XML configuration
        ]]></notes>
        <cve>CVE-2020-1945</cve>
        <packageUrl regex="true">^pkg:maven/org\.apache\.commons/commons-compress@.*$</packageUrl>
    </suppress>
</suppressions>
